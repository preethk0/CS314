	public static int digitSum(int number) {
		int sum = 0;
		int ans = 0;
		int modnum = 10;
		while(ans != number) {
			ans = number % modnum;
			modnum = modnum * 10;
			sum = sum + ans;
		}
		return sum;
	}
	
	public static int anotherfnx(int repeat) {
		int x = repeat;
		repeat += 5;
		return repeat;
	}
}
